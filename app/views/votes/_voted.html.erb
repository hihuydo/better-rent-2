<div class="col-sm-8">
	<div class="rating">
	<h1>You already voted</h1>
		<div class="rating-row">
			<p>Price</p>
			<p><%= @property.rent_per_sqm %> â‚¬ / square meter</p>
			<div>
				<% @vote_check.vote_price.times do %>
					<i class="fas fa-star"></i>
				<% end %>
			</div>
		</div>

		<div class="rating-row">
			<p>Location</p>
      <p><%= @property.street %> <%= @property.number %></p>
			<div>
				<% @vote_check.vote_location.times do %>
					<i class="fas fa-star"></i>
				<% end %>
			</div>
		</div>

		<div class="rating-row">
			<p>Size</p>
			<p>  <%= @property.lettable_area %> &nbsp square meters  </p>
			<div>
				<% @vote_check.vote_size.times do %>
					<i class="fas fa-star"></i>
				<% end %>
			</div>
		</div>

		<div class="rating-row">
			<p>Your average rating</p>
			<p></p>
			<div>
					<p><%= @vote_check.vote_average %> <i class="fas fa-star"></i></p>
			</div>
		</div>
	</div>
</div>

<div class="votes-by-team">
	<h3>Votes by your team</h3>
	<div class="team-display">
		<% if @votes_collaborators.empty? %>
			<p>You're the first voter</p>
		<% else %>
			<% @votes_collaborators.each do |vote| %>
				<div class="avatar-vote">
						<% vote.user.photos.each do |photo| %>
							<%= cl_image_tag photo.key, crop: :fill %>
						<% end %>
					<p><%= vote.vote_average %> <i class="fas fa-star"></i></p>
				</div>
			<% end %>
		<% end %>
	</div>
</div>
