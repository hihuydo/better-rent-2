<%= render 'pages/sidebar' %>
<%= render 'pages/header', title: "Stage #{@project.stage}: #{@property.street} #{@property.number}, #{@property.zipcode} #{@property.city}"  %>

<div class="property-container">
  <div class="col-sm-7">

    <div class="property-picture">
      <% if @property.photos.attached? %>
        <%= cl_image_tag @property.photos.first.key, crop: :fill, class: "card-item" %>
      <% end %>


    <% if @vote_check.nil? %>
      <%= render 'votes/star_rating' %>
    <% else %>
      <%= render 'votes/voted' %>
      <%= link_to "Remove all", project_property_vote_path(@project, @property),
                                method: :delete,
                                data: { confirm: "Are you sure?" }  %>
    <% end %>

    <div class="description">
      <h3>Description of the property</h3>
      <p><%= @property.description %></p>
    </div>

    </div>
  </div>

  <div class="col-sm-5">
    <div class="chat-box">
      <!-- <h2>Message going here</h2> -->
      <img src="https://res.cloudinary.com/lewagon-training/image/upload/v1614181587/Chat_swksf3.png" alt="Chat Messages">
    </div>
  </div>
</div>

