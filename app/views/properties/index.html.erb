<%= render 'pages/sidebar' %>
<%= render 'pages/header', title: @project.name %>

<div class="main-container">

  <div class="sub-header-properties">
    <div>
      <div class="stage-project button">
        Stage 1 of 2
      </div>
      <% if user_signed_in? %>
        <i class="fas fa-plus"></i> <%= link_to "create a new property", new_project_property_path, class: 'create-property' %>
      <% end %>
    </div>
  </div>


  <div class="card-project">
    <% @properties.each do |property|  %>
      <h4><%= property.title%></h4>
      <p><%= property.description%></p>
      <%= link_to "property details", project_property_path(params[:project_id],property) %>
      <%= link_to "edit", edit_project_property_path(params[:project_id],property) %>
      <%= link_to "delete", project_property_path(params[:project_id],property), method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>
  <br>
  <br>

</div>
