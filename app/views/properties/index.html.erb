<%= render 'pages/sidebar' %>
<%= render 'pages/header', title: "Project: #{@project.name}" %>

<div class="main-container">
  <div class="sub-header-properties">
    <div>
      <div class="stage-project button">
        Stage <%= @project.stage %> of 2
      </div>
      <% if user_signed_in? %>
        <i class="fas fa-plus"></i> <%= link_to "create a new property", new_project_property_path, class: 'create-property' %>
      <% end %>

      <div>
        <p> Project details </p>
        <%= link_to project_participants_path do  %>
          <i class="fas fa-users"></i> <%= @participants.count %> Team-Members 
        <% end %>
        <p>Stage <%= @project.stage %></p>
        <p>Votes: <i class="fas fa-vote-yea"></i> <%= @all_votes %> Casted / Expected: <%= @properties.count * @participants.count %> </p>
        <% if (@properties.count * @participants.count) == @all_votes %>
          <p>All Votes casted</p>
          <button>change stage</button>
        <% end %>    
      </div>
    </div>
  </div>

  <div class="properties">
    <div class="property-cards">
      <% @properties.each do |property|  %>
        <div class="property-card">
          <% property.photos.each do |photo| %>
            <%= cl_image_tag photo.key, crop: :fill, class: "card-item" %>
          <% end %>
          <div class="property-address"><%= property.street %> <%= property.number %>, <%= property.zipcode %> <%= property.city %></div>
          <div class="property-info"><%= property.lettable_area %> square meters | <%= property.rent_per_sqm %>â‚¬</div>


          <div class="property-info">
            <p>Votes for Stage <%= @project.stage %></p>
            <i class="fas fa-vote-yea"></i> <%= property.votes.where(stage: @project.stage).count %> Votes / <i class="fas fa-users"></i> <%= @participants.count %> Team-Members 
            <% if property.votes.where(stage: @project.stage).count == @participants.count %>
              <p> All Vote casted </p>
              <% property.votes.where(stage: @project.stage).each do |vote| %>
                <%= vote.vote_average %>
              <% end %>
            <% end %>
          </div>


          <div class="property-CTA">
            <div>
              <% if policy(property).edit? %>
                <button><%= link_to "Edit", edit_project_property_path(params[:project_id],property) %></button>
              <% end %>
              <% if policy(property).destroy? %>
                <button><%= link_to "Delete", project_property_path(params[:project_id],property), method: :delete, data: { confirm: "Are you sure?" } %></button>
              <% end %>
            </div>
            <%= link_to project_property_path(params[:project_id],property) do %>
              <i class="far fa-eye"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

  <div id="map"
    style="position: sticky; right: 0px; width: 35%; height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
