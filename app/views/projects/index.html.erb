<%= render 'pages/sidebar' %>
<%= render 'pages/header', title: "Projects" %>

<div class="main-container">
  <div class="project-intro">
    <p>Start here by adding a project. Add the city or location where you are choosing a new space.</p>
  </div>

  <div class="stages">
    <div>
      <div class="stage-headline">Stage 1</div>
      <hr>
        <% @projects.each do |project|  %>
          <% if project.stage == 1 %>
            <div class="card-project">
                <div class="project-name"><%= project.name%></div>
                <div class="project-description"><%= project.description%></div>

                <div class="project-CTA">
                  <div>
                    <% if policy(project).edit? %>
                      <button type="button-project"><%= link_to "Edit", edit_project_path(project) %></button>
                    <% end %>
                    <% if policy(project).destroy? %>
                      <button type="button-project"><%= link_to "Delete", project_path(project), method: :delete, data: { confirm: "Are you sure?" } %></button>
                    <% end %>
                  </div>

                  <%= link_to project_properties_path(project) do %>
                    <i class="far fa-eye"></i>
                  <% end %>
                </div>
            </div>
          <% end %>
        <% end %>
    </div>
    <div>
      <div class="stage-headline">Stage 2</div>
      <hr>
        <% @projects.each do |project|  %>
          <% if project.stage == 2 %>
            <div class="card-project">
                <div class="project-name"><%= project.name%></div>
                <div class="project-description"><%= project.description%></div>

                <div class="project-CTA">
                  <div>
                    <% if policy(project).edit? %>
                      <button type="button-project"><%= link_to "Edit", edit_project_path(project) %></button>
                    <% end %>
                    <% if policy(project).destroy? %>
                      <button type="button-project"><%= link_to "Delete", project_path(project), method: :delete, data: { confirm: "Are you sure?" } %></button>
                    <% end %>
                  </div>

                  <%= link_to project_properties_path(project) do %>
                    <i class="far fa-eye"></i>
                  <% end %>
                </div>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>

